{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "extends": ["eslint-config-airbnb", "plugin:react/recommended"],
    "rules": {
        "prettier/prettier": "error",
        "react/jsx-indent": ["error", 4],
        "indent": ["error", 4],
        "quotes": ["error", "single"],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
